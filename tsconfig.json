{
   "compileOnSave": false,
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "dom",
         "es2016"
      ],

      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "jsx": "preserve",
      "module": "esnext",
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "outDir": "./build",
      "preserveConstEnums": true,
      "removeComments": false,
      "skipLibCheck": true,
      "sourceMap": true,
      "target": "esnext",
   }
}